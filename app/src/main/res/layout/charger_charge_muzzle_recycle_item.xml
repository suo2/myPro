<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/main_margin_1x"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/main_margin_1x"
        android:paddingLeft="@dimen/main_margin_1x"
        android:paddingRight="@dimen/main_margin_1x"
        android:paddingTop="@dimen/main_margin_1x">

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="@dimen/main_margin_1x"
            android:src="@drawable/charger_muzzle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="枪口："
                    android:textColor="@color/text_color_626262"
                    android:textSize="@dimen/textsize_10sp" />

                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_invate_string"
                    android:textColor="@color/text_color_333333"
                    android:textSize="@dimen/textsize_12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/main_margin_1x"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="费用："
                    android:textColor="@color/text_color_626262"
                    android:textSize="@dimen/textsize_10sp" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_invate_string"
                    android:visibility="gone"
                    android:textColor="@color/text_color_333333"
                    android:textSize="@dimen/textsize_12sp" />
                <ImageView
                    android:id="@+id/iv_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:padding="@dimen/main_padding_0.5x"
                    android:src="@drawable/charger_icon_question" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/main_margin_1x"
                android:visibility="gone"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务费："
                    android:textColor="@color/text_color_626262"
                    android:textSize="@dimen/textsize_10sp" />

                <TextView
                    android:id="@+id/tv_service_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_invate_string"
                    android:textColor="@color/text_color_333333"
                    android:textSize="@dimen/textsize_12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/main_margin_1x"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="类型："
                    android:textColor="@color/text_color_626262"
                    android:textSize="@dimen/textsize_10sp" />

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_invate_string"
                    android:textColor="@color/text_color_333333"
                    android:textSize="@dimen/textsize_12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/main_margin_1x"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="接口："
                    android:textColor="@color/text_color_626262"
                    android:textSize="@dimen/textsize_10sp" />

                <TextView
                    android:id="@+id/tv_interface"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_invate_string"
                    android:textColor="@color/text_color_333333"
                    android:textSize="@dimen/textsize_12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/main_margin_1x"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_type_mark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:background="@drawable/charger_muzzle_status_free_bg"
                    android:gravity="center"
                    android:paddingBottom="@dimen/main_padding_0.5x"
                    android:paddingLeft="@dimen/main_padding_1.5x"
                    android:paddingRight="@dimen/main_padding_1.5x"
                    android:paddingTop="@dimen/main_padding_0.5x"
                    android:text="@string/main_invate_string"
                    android:textColor="@color/text_color_ffa415"
                    android:textSize="@dimen/textsize_10sp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>

