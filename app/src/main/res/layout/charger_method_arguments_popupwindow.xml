<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/main_padding_2x">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="充电桩参数："
        android:textColor="@color/text_color_ff9933"
        android:textSize="@dimen/textsize_14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/main_margin_1x"
        android:layout_marginTop="@dimen/main_margin_0.5x"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充电桩编号："
            android:textColor="@color/text_color_666666"
            android:textSize="@dimen/textsize_12sp" />

        <TextView
            android:id="@+id/tv_serialnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1111"
            android:textColor="@color/text_color_666666"
            android:textSize="@dimen/textsize_12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/main_margin_1x"
        android:layout_marginTop="@dimen/main_margin_0.5x"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充电类型："
            android:textColor="@color/text_color_666666"
            android:textSize="@dimen/textsize_12sp" />

        <TextView
            android:id="@+id/tv_charger_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1111"
            android:textColor="@color/text_color_666666"
            android:textSize="@dimen/textsize_12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/main_margin_1x"
        android:layout_marginTop="@dimen/main_margin_0.5x"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充电状态："
            android:textColor="@color/text_color_666666"
            android:textSize="@dimen/textsize_12sp" />

        <TextView
            android:id="@+id/tv_charger_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1111"
            android:textColor="@color/text_color_666666"
            android:textSize="@dimen/textsize_12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/main_margin_1x"
        android:layout_marginTop="@dimen/main_margin_0.5x"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="枪口个数："
            android:textColor="@color/text_color_666666"
            android:textSize="@dimen/textsize_12sp" />

        <TextView
            android:id="@+id/tv_charger_muzzle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1111"
            android:textColor="@color/text_color_666666"
            android:textSize="@dimen/textsize_12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/main_margin_1x"
        android:layout_marginTop="@dimen/main_margin_0.5x"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="额定功率："
            android:textColor="@color/text_color_666666"
            android:textSize="@dimen/textsize_12sp" />

        <TextView
            android:id="@+id/tv_power_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1111"
            android:textColor="@color/text_color_666666"
            android:textSize="@dimen/textsize_12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/main_margin_1x"
        android:layout_marginTop="@dimen/main_margin_0.5x"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="额定电压："
            android:textColor="@color/text_color_666666"
            android:textSize="@dimen/textsize_12sp" />

        <TextView
            android:id="@+id/tv_rated_oltage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1111"
            android:textColor="@color/text_color_666666"
            android:textSize="@dimen/textsize_12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/main_margin_0.5x"
            android:text="费率说明："
            android:textColor="@color/text_color_ff9933"
            android:textSize="@dimen/textsize_14sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rlv_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/main_margin_1x"
            android:layout_marginTop="@dimen/main_margin_0.5x"></android.support.v7.widget.RecyclerView>
    </LinearLayout>
</LinearLayout>