<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/main_padding_1x">
    <ImageView
        android:id="@+id/iv_left_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" />

    <EditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/main_margin_2x"
        android:layout_marginRight="@dimen/main_margin_2x"
        android:layout_toLeftOf="@+id/iv_right_icon"
        android:layout_toRightOf="@+id/iv_left_icon"
        android:background="@null"
        android:textColor="@color/text_color_ffa415"
        android:textSize="@dimen/textsize_17sp" />

    <ImageView
        android:id="@+id/iv_right_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/main_margin_2x"
        android:layout_toLeftOf="@+id/iv_clear"
        android:src="@drawable/login_icon_eye_close"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/login_icon_close"
        android:visibility="invisible" />
</RelativeLayout>