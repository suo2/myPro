<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="@dimen/main_padding_2x"
    android:paddingRight="@dimen/main_padding_2x"
    android:paddingTop="@dimen/main_padding_1x"
    android:paddingBottom="@dimen/main_padding_1x"
    >

    <TextView
        android:id="@+id/tv_charge_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="大源充电桩"
        android:textColor="@color/text_color_333333"
        android:textSize="@dimen/textsize_17sp" />

    <TextView
        android:id="@+id/tv_charge_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_charge_name"
        android:layout_marginTop="@dimen/main_margin_0.5x"
        android:text="2017-01-01 12:12:12"
        android:textColor="@color/text_color_333333"
        android:textSize="@dimen/textsize_17sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/main_margin_1.5x"
        android:layout_toLeftOf="@+id/iv_turn"
        android:text="查看详情"
        android:textColor="@color/text_color_ffa415"
        android:textSize="@dimen/textsize_12sp" />

    <ImageView
        android:id="@+id/iv_turn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/mine_icon_right_arrow_orange" />

    <TextView
        android:id="@+id/tv_order_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_charge_time"
        android:layout_marginTop="@dimen/main_margin_0.5x"
        android:background="@drawable/charger_muzzle_status_free_bg"
        android:gravity="center"
        android:paddingBottom="@dimen/main_padding_0.5x"
        android:paddingLeft="@dimen/main_padding_1.5x"
        android:paddingRight="@dimen/main_padding_1.5x"
        android:paddingTop="@dimen/main_padding_0.5x"
        android:text="@string/main_invate_string"
        android:textColor="@color/text_color_ffa415"
        android:textSize="@dimen/textsize_10sp" />
</RelativeLayout>