<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_toolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/main_toolbar_height"
    android:background="@color/main_color"
    android:gravity="center_vertical"
    android:paddingTop="@dimen/main_status_height">

    <ImageView
        android:id="@+id/iv_drawer_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/main_margin_1x"
        android:padding="@dimen/main_padding_1x"
        android:src="@drawable/charger_icon_filter"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_address_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/main_margin_1x"
        android:layout_marginRight="@dimen/main_margin_1x"
        android:layout_toRightOf="@+id/iv_drawer_switch"
        android:drawablePadding="@dimen/main_padding_0.5x"
        android:drawableRight="@drawable/charger_icon_down_arrow"
        android:gravity="center"
        android:text="成都市"
        android:textColor="@color/text_color_ffffff"
        android:textSize="@dimen/textsize_13sp" />

    <com.pinnet.chargerapp.widget.SearchFlowTagLayout
        android:id="@+id/searchflowtag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/main_margin_0.5x"
        android:layout_marginTop="@dimen/main_margin_0.5x"
        android:layout_toLeftOf="@+id/iv_mode_switch"
        android:layout_toRightOf="@+id/tv_address_choose"
        android:background="@drawable/toolbar_searc_bg"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/main_padding_0.5x"
        android:paddingLeft="@dimen/main_padding_1x"
        android:paddingRight="@dimen/main_padding_1x"
        android:paddingTop="@dimen/main_padding_0.5x">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/search_icon"
            android:drawablePadding="@dimen/main_padding_0.5x"
            android:gravity="center_vertical"
            android:hint="@string/charger_home_search_hint"
            android:paddingLeft="@dimen/main_padding_1x"
            android:textColor="@color/text_color_333333"
            android:textSize="@dimen/textsize_13sp" />
    </com.pinnet.chargerapp.widget.SearchFlowTagLayout>

    <ImageView
        android:id="@+id/iv_mode_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/main_margin_1x"
        android:layout_marginRight="@dimen/main_margin_1x"
        android:padding="@dimen/main_margin_1x"
        android:src="@drawable/charger_icon_list" />
</RelativeLayout>