<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_button"
        android:background="@drawable/charger_method_dialog_option__bg"
        android:orientation="vertical"
        android:paddingBottom="@dimen/main_padding_5x"
        android:paddingTop="@dimen/main_padding_2x">

        <TextView
            android:id="@+id/tv_option_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="选择充电金额"
            android:textColor="@color/text_color_333333"
            android:textSize="@dimen/textsize_18sp" />

        <TextView
            android:id="@+id/tv_option_select_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/main_margin_1x"
            android:layout_marginTop="@dimen/main_margin_1x"
            android:text="已选择充电金额 100元"
            android:textColor="@color/text_color_666666"
            android:textSize="@dimen/textsize_14sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rlv_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/main_margin_2x"></android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="取消选择"
            android:textColor="@color/text_color_333333"
            android:textSize="@dimen/textsize_16sp" />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/color_ff9934"
            android:text="确定选择"
            android:textColor="@color/text_color_ffffff"
            android:textSize="@dimen/textsize_16sp" />
    </LinearLayout>

</RelativeLayout>