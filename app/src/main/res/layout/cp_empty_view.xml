<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cp_empty_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:visibility="gone">

    <Space
        android:layout_width="match_parent"
        android:layout_height="108dp" />

    <ImageView
        android:layout_width="@dimen/cp_empty_icon_width"
        android:layout_height="@dimen/cp_empty_icon_height"
        android:scaleType="fitCenter"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/cp_no_result"
        android:textColor="@color/cp_color_gray_deep"
        android:textSize="@dimen/cp_empty_text_size" />
</LinearLayout>