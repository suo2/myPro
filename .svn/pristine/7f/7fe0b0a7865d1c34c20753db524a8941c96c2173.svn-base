<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/main_margin_3x"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/charger_dialog_help_white_bg">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/charger_icon_zxing_logo" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/charger_dialog_help_orange_bg"
            android:paddingLeft="@dimen/main_padding_3.5x"
            android:paddingRight="@dimen/main_padding_3.5x">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/charger_icon_zxing_logo"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_help_headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/main_margin_4x"
                android:text="一键扫码，快速充电"
                android:textColor="@color/text_color_000000"
                android:textSize="@dimen/textsize_20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tv_help_headline"
                android:layout_marginTop="@dimen/main_margin_2x"
                android:text="只需用手机扫描红圈内的二维码，自动进入充电选择界面。"
                android:textColor="@color/text_color_333333"
                android:textSize="@dimen/textsize_16sp" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/main_margin_2x"
        android:src="@drawable/charger_icon_help_close" />
</LinearLayout>