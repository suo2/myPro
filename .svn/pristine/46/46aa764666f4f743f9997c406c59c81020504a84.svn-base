<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/custom_dialog_border_bg"
    android:padding="@dimen/main_padding_1x">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/main_margin_1x"
        android:text="费率说明"
        android:textColor="@color/text_color_ff9933"
        android:textSize="@dimen/textsize_16sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rlv_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/main_margin_1x"></android.support.v7.widget.RecyclerView>
</LinearLayout>