<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_view"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/main_padding_1.5x"
    android:paddingLeft="@dimen/main_padding_1.5x"
    android:paddingRight="@dimen/main_padding_1.5x"
    android:paddingTop="@dimen/main_padding_2x">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_user_header"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/mine_icon_defaule_header" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/main_margin_1x"
            android:layout_toRightOf="@+id/iv_user_header"
            android:text="客服小妹"
            android:textColorHighlight="@color/text_color_999999"
            android:textSize="@dimen/textsize_14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_user_name"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/main_margin_1x"
            android:layout_toRightOf="@+id/tv_user_name"
            android:text="thyi5016"
            android:textColor="@color/text_color_999999"
            android:textSize="@dimen/textsize_13sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_question_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/main_margin_1.5x"
        android:text="e品充APP使用常见问题"
        android:textColor="@color/text_color_333333"
        android:textSize="@dimen/textsize_18sp" />

    <TextView
        android:id="@+id/tv_answer_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/main_margin_1.5x"
        android:lineSpacingExtra="@dimen/main_margin_0.5x"
        android:maxLines="3"
        android:text="1、如何退款？\ne品充APP使用常见问题"
        android:textColor="@color/text_color_666666"
        android:textSize="@dimen/textsize_16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/main_margin_1.5x"
        android:text="10赞同"
        android:textColor="@color/text_color_999999"
        android:textSize="@dimen/textsize_16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/main_margin_1.5x"
        android:orientation="horizontal"
        android:weightSum="5">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="待回答"
            android:textColor="@color/text_color_999999"
            android:textSize="@dimen/textsize_16sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1关注"
            android:textColor="@color/text_color_999999"
            android:textSize="@dimen/textsize_16sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="关注问题"
            android:textColor="@color/text_color_999999"
            android:textSize="@dimen/textsize_16sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_answer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="我来回答"
            android:gravity="right"
            android:textColor="@color/text_color_ff9933"
            android:textSize="@dimen/textsize_16sp" />
    </LinearLayout>
</LinearLayout>