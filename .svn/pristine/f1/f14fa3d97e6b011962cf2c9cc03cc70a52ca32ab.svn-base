<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_time_zone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_invate_string"
        android:textColor="@color/text_color_333333"
        android:textSize="@dimen/textsize_12sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/main_margin_2.5x"
        android:layout_marginTop="@dimen/main_margin_0.5x"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充电费单价："
            android:textColor="@color/text_color_626262"
            android:textSize="@dimen/textsize_12sp" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_invate_string"
            android:textColor="@color/text_color_333333"
            android:textSize="@dimen/textsize_12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/main_margin_2.5x"
        android:layout_marginTop="@dimen/main_margin_0.5x"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务费："
            android:textColor="@color/text_color_626262"
            android:textSize="@dimen/textsize_12sp" />

        <TextView
            android:id="@+id/tv_service_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_invate_string"
            android:textColor="@color/text_color_333333"
            android:textSize="@dimen/textsize_12sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/main_margin_0.5x"
        android:layout_marginTop="@dimen/main_margin_0.5x"
        android:background="@color/login_divider" />
</LinearLayout>