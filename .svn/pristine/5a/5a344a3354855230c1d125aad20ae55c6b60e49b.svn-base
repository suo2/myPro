<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/main_margin_6x"
        android:background="@drawable/custom_dialog_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/main_padding_2x">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册成功"
            android:textColor="@color/text_color_333333"
            android:textSize="@dimen/textsize_18sp" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/main_margin_2x"
            android:layout_marginRight="@dimen/main_margin_2x"
            android:layout_marginTop="@dimen/main_margin_2x"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/main_padding_0.5x"
            android:text="恭喜您注册成功，点击确定开始登录"
            android:textColor="@color/text_color_666666"
            android:textSize="@dimen/textsize_16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/main_margin_2x"
            android:background="@color/text_color_666666" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/tv_cancle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/main_btn_cancel"
                android:textColor="@color/text_color_666666"
                android:background="@drawable/charger_btn_ripple_orange"
                android:textSize="@dimen/textsize_18sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/charger_btn_ripple_orange"
                android:gravity="center"
                android:text="@string/main_btn_confirm"
                android:textColor="@color/text_color_ff9933"
                android:textSize="@dimen/textsize_18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>