<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_include_common" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/main_toolbar">

        <LinearLayout
            android:id="@+id/view_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/main_padding_2x">

                <TextView
                    android:id="@+id/tv_station_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/main_margin_1x"
                    android:text="大源充电桩"
                    android:textColor="@color/text_color_ff9933"
                    android:textSize="@dimen/textsize_18sp" />

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/main_margin_2.5x"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/charger_order_detail_operators"
                        android:textColor="@color/text_color_666666"
                        android:textSize="@dimen/textsize_16sp" />

                    <TextView
                        android:id="@+id/tv_operators"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/main_invate_string"
                        android:textColor="@color/text_color_333333"
                        android:textSize="@dimen/textsize_14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/main_margin_2.5x"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/charger_order_detail_total_price"
                        android:textColor="@color/text_color_666666"
                        android:textSize="@dimen/textsize_16sp" />

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/main_invate_value"
                        android:textColor="@color/text_color_333333"
                        android:textSize="@dimen/textsize_14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/main_margin_2.5x"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/charger_order_detail_service_total_price"
                        android:textColor="@color/text_color_666666"
                        android:textSize="@dimen/textsize_16sp" />

                    <TextView
                        android:id="@+id/tv_service_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/main_invate_value"
                        android:textColor="@color/text_color_333333"
                        android:textSize="@dimen/textsize_14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/main_margin_2.5x"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/charger_order_detail_charge_start_time"
                        android:textColor="@color/text_color_666666"
                        android:textSize="@dimen/textsize_16sp" />

                    <TextView
                        android:id="@+id/tv_charger_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/main_invate_string"
                        android:textColor="@color/text_color_333333"
                        android:textSize="@dimen/textsize_14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/main_margin_2.5x"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/charger_order_detail_used_time"
                        android:textColor="@color/text_color_666666"
                        android:textSize="@dimen/textsize_16sp" />

                    <TextView
                        android:id="@+id/tv_charger_use_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/main_invate_string"
                        android:textColor="@color/text_color_333333"
                        android:textSize="@dimen/textsize_14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/main_margin_2.5x"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/charger_order_detail_charged_power"
                        android:textColor="@color/text_color_666666"
                        android:textSize="@dimen/textsize_16sp" />

                    <TextView
                        android:id="@+id/tv_charger_power"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/main_invate_value"
                        android:textColor="@color/text_color_333333"
                        android:textSize="@dimen/textsize_14sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/main_margin_2.5x"
                    android:background="@color/text_color_666666" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/main_margin_2.5x">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/charger_order_detail_total_amount"
                        android:textColor="@color/text_color_666666"
                        android:textSize="@dimen/textsize_16sp" />

                    <TextView
                        android:id="@+id/tv_total_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="@string/main_invate_value"
                        android:textColor="@color/text_color_333333"
                        android:textSize="@dimen/textsize_18sp" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/color_334046"
                android:padding="@dimen/main_padding_2.5x">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/btn_confirm_pay"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/main_margin_2x"
                    android:text="@string/charger_order_detail_tips"
                    android:textColor="@color/text_color_999999"
                    android:textSize="@dimen/textsize_14sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btn_confirm_pay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/btn_continue"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/main_margin_2x"
                    android:background="@drawable/charger_charging_btn_orange_bg"
                    android:text="@string/charger_order_detail_confirm_pay"
                    android:textColor="@color/text_color_ffffff"
                    android:textSize="@dimen/textsize_18sp" />

                <Button
                    android:id="@+id/btn_continue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/charger_charging_btn_bg"
                    android:text="@string/charger_order_detail_continue_charge"
                    android:textColor="@color/text_color_ffffff"
                    android:textSize="@dimen/textsize_18sp"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <include layout="@layout/toolbar_include_shadow" />
</RelativeLayout>