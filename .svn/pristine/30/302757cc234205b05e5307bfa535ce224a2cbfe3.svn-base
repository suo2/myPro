<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/main_padding_2x">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="充电记录选择"
        android:padding="@dimen/main_padding_1x"
        android:textColor="@color/text_color_666666"
        android:textSize="@dimen/textsize_16sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rlv_filter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_bottom"
        android:padding="@dimen/main_padding_1x"
        android:layout_below="@+id/tv_title"
        android:layoutAnimation="@anim/layout_animation_fall_down"></android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_ff9934"
            android:clickable="true"
            android:gravity="center"
            android:padding="@dimen/main_padding_1x"
            android:text="确定"
            android:textColor="@color/text_color_ffffff"
            android:textSize="@dimen/textsize_14sp" />
    </LinearLayout>
</RelativeLayout>